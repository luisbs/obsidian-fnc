{
    "license": "MIT",
    "version": "1.3.1",
    "name": "@luis.bs/obsidian-fnc",
    "description": "Common obsidian utility functions",
    "keywords": [
        "obsidian",
        "utility"
    ],
    "publishConfig": {
        "provenance": true,
        "access": "public"
    },
    "repository": {
        "url": "https://github.com/luisbs/obsidian-fnc"
    },
    "author": {
        "name": "luisbs",
        "url": "https://github.com/luisbs"
    },
    "files": [
        "lib/**/*"
    ],
    "type": "module",
    "types": "./lib/types.d.ts",
    "main": "./lib/obsidian-fnc.cjs",
    "module": "./lib/obsidian-fnc.js",
    "exports": {
        ".": {
            "types": "./lib/types.d.ts",
            "import": "./lib/obsidian-fnc.js",
            "require": "./lib/obsidian-fnc.cjs"
        }
    },
    "scripts": {
        "prepare": "npx simple-git-hooks",
        "lint:prettier": "prettier --check src",
        "lint:eslint": "eslint",
        "lint": "pnpm lint:eslint && pnpm lint:prettier",
        "test": "vitest",
        "watch": "vite",
        "build": "vite build && tsc",
        "ci:publish": "pnpm build && clean-pkg-json && changeset publish",
        "release": "changeset"
    },
    "dependencies": {
        "@floating-ui/dom": "^1.6.13"
    },
    "devDependencies": {
        "@changesets/cli": "^2.27.12",
        "@commitlint/cli": "^19.7.1",
        "@commitlint/config-conventional": "^19.7.1",
        "@eslint/js": "^9.19.0",
        "@types/node": "^20.17.17",
        "builtin-modules": "^3.3.0",
        "clean-pkg-json": "^1.2.0",
        "eslint": "^9.19.0",
        "eslint-config-prettier": "^9.1.0",
        "globals": "^15.14.0",
        "lint-staged": "^15.4.3",
        "npm-run-all": "^4.1.5",
        "obsidian": "^1.7.2",
        "prettier": "^3.4.2",
        "simple-git-hooks": "^2.11.1",
        "tslib": "^2.8.1",
        "typescript": "^5.7.3",
        "typescript-eslint": "^8.23.0",
        "vite": "^5.4.14",
        "vite-plugin-banner": "^0.8.0",
        "vitest": "^3.0.5"
    },
    "simple-git-hooks": {
        "pre-commit": "npx lint-staged",
        "commit-msg": "npx commitlint -e -V"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "lint-staged": {
        "src/**/*.{ts}": [
            "eslint",
            "prettier"
        ]
    }
}
